 <div class = 'container'> 
    <%= notice%>
    <h1>Post and comments of <%= @user.name%></h1> 

    <p class = 'border'> <%= @user.name%></p>
    
    <% @post.each do |post| %>
      <div class = 'border'>
        <p> <%= post.text %> </p>
        <p> <% post.most_recent_comments.each do |comment| %> 
          <p> <%= @user.name%>: <%= comment.text %>  </p>
        <% end %>
        </p>
      </div>   
      
    <% end %>
 </div>
 
 