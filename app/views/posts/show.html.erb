<div class = ''>
  <h1 class='text-uppercase text-center my-4'>Comments to <%= @posts.author.name%>'s post </h1>  
  <div class = 'border d-flex justify-content-between'>
    <div class='p-3'>
      <p class='lead'>Post #<%= @posts.id %> by: <%= @posts.author.name%> </p>
      <div class="row">
        <p class="col-5">Title: </p>
        <p class="col-7"> <%= @posts.title%> </p>
      </div>
      <div class="row">
        <p class="col-5">Post: </p>
        <p class="col-7"> <%= @posts.text%> </p>
      </div>      
    </div>    
    <div class='p-3'>      
      <p class = 'me-2'> Comments:  <%= @posts.comments_counter %> Likes: <%= @posts.likes_counter%> </p>
      <% if user_signed_in?%>
        <%= form_with(model: Like.new, url: post_likes_path(@posts), method: :post ) do |f| %>    
          <%= f.submit "Like", class: 'btn btn-danger' %>    
        <% end %>
      <% end %>
    </div>    
  </div>  
  
  
  <h3>Comments:</h3>
  <div class="bg-light"> 
    <% @user_posts.each do |post| %>    
      <p class = 'border p-3 my-1'> <%= post.author.name%>:  <%= post.text %></p>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <%= link_to 'Add comment', new_post_comment_path(@posts), class: 'btn btn-secondary my-3'%>  
  <% end %>
</div>
