<div>
  <h1 class = "text-center my-5 text-uppercase">User List</h1>
 
  <% @users.each do |user|%>
    <div id= "User: <%= user.id%>" class = 'border p-4 my-2 row bg-light'>      
      <%= image_tag (user.photo), height: '120', width: '120', class: 'col-md-2' %>     
      <div class= 'd-flex align-items-center border justify-content-between col-md-10'>
        <%= link_to user_path(user.id), id: user.id do %>
          <h3 class = "text-center"> <%= user.name %> </h3>
        <% end %>
        <p> Number of posts:  <%= user.posts_counter %> </p>      
      </div>
    </div>    
  <% end %>
</div>
