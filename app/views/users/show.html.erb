<div>  
  <h1 class='text-center text-uppercase'>Posts of <%= @posts.name %></h1>   

  <%=link_to "Add new post", new_user_post_path(@posts.id), class: 'btn btn-secondary' %>
  
  <div  id="User: <%= @posts.id %>" class = 'row align-items-center my-3'>
    <%
=begin%>
 <%= image_tag (@posts.photo), height: '120', width: '120', class: 'col-2' %> 
<%
=end%>
    <h3 class = 'border col-10 lead text-uppercase p-3 text-center'> <%= @posts.name %> <br></h3>
    <p> Number of posts:  <%= @posts.posts_counter %> </p>  
  </div>
  
  <p class = 'border p-3 text-center'> <span> Bio </span> <br> <%= @posts.bio %> </p>

  <% @user_posts.each do |post| %>    
    <div class = 'border d-flex justify-content-between align-items-center post'> 
      <div class = 'p-3'>
        <p class='lead'> <%= post.title %></p>        
        <p class='lead'> <%= @posts.name %>:  
        <%= link_to user_post_path(post.author_id, post.id), id: "Post: #{post.id}", class: 'text-decoration-none' do %>
          <%= truncate(post.text, :length => 150) %> </p>          
        <% end %>        
      </div>      
      <p class = 'me-2'> Comments:  <%= post.comments_counter %> Likes: <%= post.likes_counter%> </p>
    </div>
  <% end %>

  <%= link_to ("See all posts"),user_posts_path(@posts.id), class: 'btn btn-secondary my-3'%>
</div>
