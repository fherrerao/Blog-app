<div>  
  <h1 class='text-center'>Posts of <%= @posts.name %></h1>   

  <%=link_to "Add new post", new_user_post_path(@posts.id), class: 'btn btn-secondary' %>
  
  <div class = 'row align-items-center my-3'>
    <%= image_tag (@posts.photo), height: '120', width: '120', class: 'col-2' %>
    <h3 class = 'border col-10'> <%= @posts.name %> <br></h3>
  </div>
  
  <p class = 'border p-3 text-center'> <span> Bio </span> <br> <%= @posts.bio %> </p>

  <% @user_posts.each do |post| %>    
    <div class = 'border d-flex justify-content-between align-items-center'> 
      <div>
        <p>Post# <%= post.id %></p>
        
        <p> <%= @posts.name %>:  
        <%= link_to user_post_path(post.author_id, post.id) do %>
          <%= post.text %> </p>
        <% end %>        
      </div>      
      <p> Comments:  <%= post.comments_counter %> Likes: <%= post.likes_counter%> </p>
    </div>
  <% end %>

  <%= link_to ("See all posts"),user_posts_path(@posts.id), class: 'btn btn-secondary my-3'%>
</div>
