<div class = 'container'>  
  <h1>Posts of <%= @posts.name %></h1>   

  <button class= "button mb"><%=link_to "Add new post", new_user_post_path(@posts.id) %></button>  
  
  <div class = 'd-grid align-items-center margin'>
    <%= image_tag (@posts.photo), height: '120', width: '120' %>
    <h3 class = 'border'> <%= @posts.name %> <br></h3>
  </div>
  
  <p class = 'border'> <span> Bio </span> <br> <%= @posts.bio %> </p>

  <% @user_posts.each do |post| %>    
    <div class = 'border d-flex justify-content-between align-items-center'> 
      <div>
        <p>Post# <%= post.id %></p>
        
        <p> <%= @posts.name %>:  
        <%= link_to user_post_path(post.author_id, post.id) do %>
          <%= post.text %> </p>
        <% end %>        
      </div>      
      <p> Comments:  <%= post.comments_counter %> Likes: <%= post.likes_counter%> </p>
    </div>
  <% end %>

  <button><%= link_to ("See all posts"),user_posts_path(@posts.id) %></button>
</div>
