<h2 class='text-center'>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, 'data-turbo': 'false' }) do |f| %>
  <div class = 'd-flex flex-column align-items-center border bg-light'> 
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-5">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-secondary my-3'%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  
  </div>
  
